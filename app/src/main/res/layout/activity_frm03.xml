<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="protekto.corpo.com.mx.corpoprotekto.frm03">

    <TableLayout
        android:id="@+id/layoutx"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dip">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:layout_marginTop="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/imagen04" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="0dip">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="320dp"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/lblExitoso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="35dp"
                    android:text="Felicidades, tu registro ha sido exitoso!!!"
                    android:textColor="#424242"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/lblRecuerda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblExitoso"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="35dp"
                    android:text="Recuerda que para alcanzar el resultado deseado, será FUNDAMENTAL contar con tu compromiso y constancia en la realización de las actividades, pues serás TÚ y SÓLO TÚ quien llevará el control."
                    android:textColor="#424242"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/lblAcontinuacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblRecuerda"
                    android:layout_marginBottom="120dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="A continuación te explicaremos cómo funciona la aplicación.
"
                    android:textColor="#424242"
                    android:textSize="19sp" />

            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:padding="0dip">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY">

                <Button
                    android:id="@+id/btnIniciar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:backgroundTint="#0489B1"
                    android:onClick="gotoFrm"
                    android:tag="frm04"
                    android:text="Siguiente"
                    android:textColor="#FFFFFF"
                    android:layout_alignParentBottom="true"
                     />

            </RelativeLayout>

        </TableRow>

    </TableLayout>




</android.support.constraint.ConstraintLayout>
