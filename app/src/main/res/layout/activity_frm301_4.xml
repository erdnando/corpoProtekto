                    android:theme="@style/Widget.AppCompat.SeekBar.Discrete" />

                <TextView
                    android:id="@+id/tvDeSeekBarPregunta7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/sbPregunta7"
