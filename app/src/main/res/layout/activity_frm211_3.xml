<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="protekto.corpo.com.mx.corpoprotekto.frm211_3">

    <TableLayout
        android:id="@+id/layoutx"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="0dip">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-20dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:id="@+id/lytTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblTexto1"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="140dp"
                        android:layout_height="120dp"

                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="40dp"
                        app:srcCompat="@drawable/imagen30" />

                    <TextView
                        android:id="@+id/lblTexto2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="40dp"
                        android:gravity="fill"
                        android:text="Pensamiento:

No le intereso. Todas piensan que estoy muy chaparro"
                        android:textColor="#424242"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/lblTextoX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/linearLayout"
                    android:layout_alignStart="@+id/linearLayout"
                    android:layout_below="@+id/lytTop"
                    android:layout_marginTop="10dp"
                    android:gravity="fill"
                    android:text="Aquí vemos un ejemplo de cuando sacamos conclusiones de una situación, y generalizamos basados en algunas experiencias previas"
                    android:textColor="#424242"
                    android:textSize="18sp" />


                <LinearLayout
                    android:id="@+id/lyutBottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblTextoX"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblTexto3"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/imageView2"
                        android:layout_alignLeft="@+id/imageView2"
                        android:layout_alignRight="@+id/imageView2"
                        android:layout_alignStart="@+id/imageView2"
                        android:layout_below="@+id/imageView2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="25dp"
                        android:gravity="fill"
                        android:text="Pensamiento:

Pensará que tengo estrías y celulitis"
                        android:textColor="#424242"
                        android:textSize="18sp" />


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_alignLeft="@+id/lblTexto2"
                        android:layout_alignStart="@+id/lblTexto2"
                        android:layout_below="@+id/lblTexto2"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="25dp"
                        app:srcCompat="@drawable/imagen31" />


                </LinearLayout>

                <TextView
                    android:id="@+id/lblTexto5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lyutBottom"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="En este caso creemos saber lo que la otra persona piensa, sin habérselo preguntado antes, y nuestra conducta está basada en esa idea."
                    android:textColor="#424242"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/lyutBottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-18dp"
                    android:gravity="bottom|right"
                    android:orientation="horizontal"
                    android:id="@+id/linearLayout">

                    <Button
                        android:id="@+id/btnPrev11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/imageView3"
                        android:layout_toLeftOf="@+id/btnNext10"
                        android:layout_toStartOf="@+id/btnNext10"
                        android:backgroundTint="#0489B1"
                        android:onClick="gotoFrm"
                        android:tag="frm211_2"
                        android:text="Anterior"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btnNext10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:backgroundTint="#0489B1"
                        android:onClick="gotoFrm"
                        android:tag="frm211_4"
                        android:text="Siguiente"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

            </RelativeLayout>

        </TableRow>

    </TableLayout>


</android.support.constraint.ConstraintLayout>
