<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="protekto.corpo.com.mx.corpoprotekto.frm201_4">


    <TableLayout
        android:id="@+id/tbl1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="-16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dip">

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:scaleType="fitXY">

                <TextView
                    android:id="@+id/tvPregunta7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginTop="25dp"
                    android:gravity="fill"
                    android:text="7. Utilizar mucho maquillaje, revisar constantemente el celular en una situación social o dirigir la atención a otra cosa, son ejemplos de…"
                    android:textColor="#424242"
                    android:textSize="18sp" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/grpRbM3Pregunta7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPregunta7"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="-15dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbM3P5R1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="Conductas de seguridad" />

                    <RadioButton
                        android:id="@+id/rbM3P5R2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="Acciones inadecuadas" />

                    <RadioButton
                        android:id="@+id/rbM3P5R3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="Estrategias de afrontamiento" />
                </RadioGroup>


                <TextView
                    android:id="@+id/tvPregunta8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/tvPregunta7"
                    android:layout_alignLeft="@+id/tvPregunta7"
                    android:layout_alignRight="@+id/tvPregunta7"
                    android:layout_alignStart="@+id/tvPregunta7"
                    android:layout_below="@+id/grpRbM3Pregunta7"
                    android:layout_marginTop="14dp"
                    android:gravity="fill"
                    android:text="8. En una escala del 1 al 5 ¿qué tan capaz soy de controlar mis emociones?"
                    android:textColor="#424242"
                    android:textSize="18sp" />

                <SeekBar
                    android:id="@+id/sbPregunta8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tvPregunta8"
                    android:layout_alignStart="@+id/tvPregunta8"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/btnNext10"
                    android:layout_toStartOf="@+id/btnNext10"
                    android:max="5"
                    android:theme="@style/Widget.AppCompat.SeekBar.Discrete" />

                <TextView
                    android:id="@+id/tvDeSeekBarPregunta8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#424242"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/sbPregunta8"
                    android:layout_toEndOf="@+id/sbPregunta8"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp" />



                <TextView
                    android:id="@+id/tvPregunta9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/sbPregunta9"
                    android:layout_alignEnd="@+id/tvPregunta8"
                    android:layout_alignLeft="@+id/sbPregunta8"
                    android:layout_alignRight="@+id/tvPregunta8"
                    android:layout_alignStart="@+id/sbPregunta8"
                    android:layout_marginBottom="12dp"
                    android:gravity="fill"
                    android:text="9. En una escala del 1 al 5 ¿qué tanto conozco los pensamientos, las emociones y las acciones que llevo a cabo con respecto a mi apariencia?"
                    android:textColor="#424242"
                    android:textSize="18sp" />

                <SeekBar
                    android:id="@+id/sbPregunta9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/lblMuchasGracias3"
                    android:layout_alignLeft="@+id/tvPregunta9"
                    android:layout_alignStart="@+id/tvPregunta9"
                    android:layout_marginBottom="25dp"
                    android:layout_toLeftOf="@+id/btnNext10"
                    android:layout_toStartOf="@+id/btnNext10"
                    android:max="5"
                    android:theme="@style/Widget.AppCompat.SeekBar.Discrete" />

                <TextView
                    android:id="@+id/tvDeSeekBarPregunta9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/tvDeSeekBarPregunta7"
                    android:layout_alignLeft="@+id/tvDeSeekBarPregunta8"
                    android:layout_alignRight="@+id/tvDeSeekBarPregunta7"
                    android:layout_alignStart="@+id/tvDeSeekBarPregunta8"
                    android:layout_alignTop="@+id/sbPregunta9"
                    android:layout_below="@+id/sbPregunta9"
                    android:layout_toEndOf="@+id/tvDeSeekBarPregunta8"
                    android:text="0"
                    android:textColor="#424242"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/lblMuchasGracias3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/btnPrev11"
                    android:text="¡Muy bien! Más adelante te diremos cuáles son las respuestas correctas ;-)"
                    android:textColor="#424242"
                    android:textSize="18sp"
                    android:layout_alignLeft="@+id/sbPregunta9"
                    android:layout_alignStart="@+id/sbPregunta9"
                    android:layout_alignRight="@+id/tvPregunta9"
                    android:layout_alignEnd="@+id/tvPregunta9" />


                <Button
                    android:id="@+id/btnPrev11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/btnNext10"
                    android:layout_toStartOf="@+id/btnNext10"
                    android:backgroundTint="#0489B1"
                    android:onClick="gotoFrm"
                    android:tag="frm201_3"
                    android:text="Anterior"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnNext10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="#0489B1"
                    android:onClick="gotoFrm"
                    android:tag="frm201_5"
                    android:text="Siguiente"
                    android:textColor="#FFFFFF" />

            </RelativeLayout>

        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>
