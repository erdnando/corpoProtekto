<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="protekto.corpo.com.mx.corpoprotekto.frm322_4">
    <TableLayout
        android:id="@+id/tbl1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dip">

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:scaleType="fitXY">

                <TextView
                    android:id="@+id/lblTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="-5dp"
                    android:gravity="left"
                    android:text="A continuación te pedimos que señales el nivel de eficacia de los métodos (principalmente para evitar embarazos), colocando la etiqueta donde corresponda (Datos de las OMS):"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000000"
                    android:textSize="18sp" />


                <RelativeLayout
                    android:id="@+id/layoutFiguraHumana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblTitulo"
                    android:layout_marginBottom="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/imagen65"
                    android:scaleType="fitXY">


                    <Spinner
                        android:id="@+id/cbo1"
                        android:layout_width="105dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="167dp"
                        android:background="@android:color/background_light"
                        android:entries="@array/metodos" />

                    <Spinner
                        android:id="@+id/cbo2"
                        android:layout_width="105dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="138dp"
                        android:layout_marginTop="167dp"
                        android:background="@android:color/background_light"
                        android:entries="@array/metodos" />

                    <Spinner
                        android:id="@+id/cbo3"
                        android:layout_width="105dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="265dp"
                        android:layout_marginTop="167dp"
                        android:background="@android:color/background_light"
                        android:entries="@array/metodos" />

                    <Spinner
                        android:id="@+id/cbo4"
                        android:layout_width="105dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="332dp"
                        android:background="@android:color/background_light"
                        android:entries="@array/metodos" />

                    <Spinner
                        android:id="@+id/cbo5"
                        android:layout_width="105dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="138dp"
                        android:layout_marginTop="332dp"
                        android:background="@android:color/background_light"
                        android:entries="@array/metodos" />

                    <Spinner
                        android:id="@+id/cbo6"
                        android:layout_width="105dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="265dp"
                        android:layout_marginTop="332dp"
                        android:background="@android:color/background_light"
                        android:entries="@array/metodos" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="375dp"
                        android:text="" />


                </RelativeLayout>


            </RelativeLayout>


        </TableRow>

    </TableLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/tbl1"
        app:layout_constraintEnd_toEndOf="@+id/tbl1">

        <Button
            android:id="@+id/btnNext11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#0489B1"
            android:onClick="gotoFrm"
            android:tag="frm322_5"
            android:text="Siguiente"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
