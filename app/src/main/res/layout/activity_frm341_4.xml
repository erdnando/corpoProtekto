                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:gravity="fill"
                        android:text="Por favor llena este registro con una situación similar a la del ejemplo:"
                        android:textColor="#424242"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvPregunta8"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        app:srcCompat="@drawable/imagen76" />

                    <TextView
                        android:id="@+id/tvPregunta1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView"
                        android:layout_margin="15dp"
                        android:layout_marginTop="25dp"
                        android:gravity="fill"
                        android:text="1- ¿Qué haré hoy?"
                        android:textColor="#424242"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/etPreg1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/tvPregunta2"
                        android:layout_alignLeft="@+id/tvPregunta1"
                        android:layout_alignRight="@+id/tvPregunta2"
                        android:layout_alignStart="@+id/tvPregunta1"
                        android:layout_below="@+id/tvPregunta1"
                        android:layout_marginTop="-10dp"
                        android:ems="10"
                        android:inputType="textPersonName" />


                    <TextView
                        android:id="@+id/tvPregunta2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etPreg1"
                        android:layout_margin="15dp"
                        android:layout_marginTop="25dp"
                        android:gravity="fill"
                        android:text="2- ¿Qué conductas de riesgo podría llevar a cabo?"
                        android:textColor="#424242"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvPregunta2Res1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvPregunta2"
                        android:layout_margin="15dp"
                        android:layout_marginTop="25dp"
                        android:gravity="fill"
                        android:text="Posibilidad 1:"
                        android:textColor="#424242"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etPreg2Res1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/tvPregunta2"
                        android:layout_alignLeft="@+id/tvPregunta2Res1"
                        android:layout_alignRight="@+id/tvPregunta2"
                        android:layout_alignStart="@+id/tvPregunta2Res1"
