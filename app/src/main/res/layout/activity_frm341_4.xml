                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etPreg2Res2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/tvPregunta3"
                        android:layout_alignLeft="@+id/tvPregunta2Res2"
                        android:layout_alignRight="@+id/tvPregunta3"
                        android:layout_alignStart="@+id/tvPregunta2Res2"
                        android:layout_below="@+id/tvPregunta2Res2"
                        android:layout_marginTop="-10dp"
                        android:ems="10"
                        android:inputType="textPersonName" />


                    <TextView
                        android:id="@+id/tvPregunta3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etPreg2Res2"
                        android:layout_margin="15dp"
                        android:layout_marginTop="25dp"
                        android:gravity="fill"
                        android:text="3- ¿Qué conductas de protección puedo realizar?"
                        android:textColor="#424242"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvPregunta3Res1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvPregunta3"
                        android:layout_margin="15dp"
                        android:layout_marginTop="25dp"
                        android:gravity="fill"
                        android:text="Posibilidad 1:"
                        android:textColor="#424242"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etPreg3Res1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/tvPregunta3"
                        android:layout_alignLeft="@+id/tvPregunta3Res1"
                        android:layout_alignRight="@+id/tvPregunta3"
                        android:layout_alignStart="@+id/tvPregunta3Res1"
                        android:layout_below="@+id/tvPregunta3Res1"
                        android:layout_marginTop="-10dp"
                        android:ems="10"
                        android:inputType="textPersonName" />

                    <TextView
                        android:id="@+id/tvPregunta3Res2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etPreg3Res1"
                        android:layout_margin="15dp"
                        android:layout_marginTop="25dp"
                        android:gravity="fill"
                        android:text="Posibilidad 2:"
                        android:textColor="#424242"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etPreg3Res2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/tvPregunta4"
                        android:layout_alignLeft="@+id/tvPregunta3Res2"
