                        android:layout_margin="15dp"
                        android:layout_marginTop="25dp"
                        android:gravity="fill"
                        android:text="Posibilidad 2:"
                        android:textColor="#424242"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etPreg4Res2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/tvPregunta4"
                        android:layout_alignLeft="@+id/tvPregunta4Res2"
                        android:layout_alignRight="@+id/tvPregunta4"
                        android:layout_alignStart="@+id/tvPregunta4Res2"
                        android:layout_below="@+id/tvPregunta4Res2"
                        android:ems="10"
                        android:inputType="textPersonName" />

                </RelativeLayout>

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:padding="0dip">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY">

                    <Button
                        android:id="@+id/btnPrev11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toLeftOf="@+id/btnNext10"
                        android:layout_toStartOf="@+id/btnNext10"
                        android:backgroundTint="#0489B1"
                        android:onClick="gotoFrm"
                        android:tag="frm341_3"
                        android:text="Anterior"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btnNext10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:backgroundTint="#0489B1"
                        android:onClick="gotoFrm"
                        android:tag="frm341_5"
                        android:text="Siguiente"
                        android:textColor="#FFFFFF" />

