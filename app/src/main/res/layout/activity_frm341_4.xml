                        android:textColor="#424242"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etPreg4Res1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/etPreg4Res2"
                        android:layout_alignLeft="@+id/tvPregunta4Res1"
                        android:layout_alignRight="@+id/etPreg4Res2"
                        android:layout_alignStart="@+id/tvPregunta4Res1"
                        android:layout_below="@+id/tvPregunta4Res1"
                        android:layout_marginTop="-10dp"
