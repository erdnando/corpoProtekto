<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="protekto.corpo.com.mx.corpoprotekto.frm212_4">


    <TableLayout
        android:id="@+id/tbl1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="-16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dip">

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:scaleType="fitXY">

                <TextView
                    android:id="@+id/tvTexto1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginTop="25dp"
                    android:gravity="fill"
                    android:text="En una escala del 1 al 5, señala"
                    android:textColor="#424242"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvPregunta1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTexto1"
                    android:layout_margin="15dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="25dp"
                    android:gravity="fill"
                    android:text="1- ¿Qué tan racional o lógico te parece el pensamiento que tuviste?"
                    android:textColor="#424242"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblRacional1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPregunta1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="-10dp"
                    android:gravity="fill"
                    android:text="IRRACIONAL  ----->  RACIONAL"
                    android:textColor="#424242"
                    android:textSize="18sp" />

                <SeekBar
                    android:id="@+id/sbPregunta1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tvPregunta1"
                    android:layout_alignStart="@+id/tvPregunta1"
                    android:layout_below="@+id/lblRacional1"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/btnNext10"
                    android:layout_toStartOf="@+id/btnNext10"
                    android:max="5"
                    android:theme="@style/Widget.AppCompat.SeekBar.Discrete" />

                <TextView
                    android:id="@+id/tvDeSeekBarPregunta1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/sbPregunta1"
                    android:text="0"
                    android:textColor="#424242"
                    android:textSize="18sp"
                    android:layout_alignLeft="@+id/tvDeSeekBarPregunta2"
                    android:layout_alignStart="@+id/tvDeSeekBarPregunta2" />


                <TextView
                    android:id="@+id/tvPregunta2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/tvPregunta1"
                    android:layout_alignLeft="@+id/sbPregunta2"
                    android:layout_alignRight="@+id/tvPregunta1"
                    android:layout_alignStart="@+id/sbPregunta2"
                    android:layout_below="@+id/sbPregunta1"
                    android:layout_marginTop="24dp"
                    android:gravity="fill"
                    android:text="2- ¿Qué tan frecuentemente te viene ese pensamiento a la mente?"
                    android:textColor="#424242"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblRacional2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPregunta2"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="3dp"
                    android:gravity="fill"
                    android:text="CASI NUNCA  ----->  MUY FRECUENTE"
                    android:textColor="#424242"
                    android:textSize="18sp" />

                <SeekBar
                    android:id="@+id/sbPregunta2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/sbPregunta1"
                    android:layout_alignLeft="@+id/sbPregunta1"
                    android:layout_alignRight="@+id/sbPregunta1"
                    android:layout_alignStart="@+id/sbPregunta1"
                    android:layout_below="@+id/lblRacional2"
                    android:layout_marginTop="17dp"
                    android:max="5"
                    android:theme="@style/Widget.AppCompat.SeekBar.Discrete" />

                <TextView
                    android:id="@+id/tvDeSeekBarPregunta2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:text="0"
                    android:textColor="#424242"
                    android:textSize="18sp"
                    android:layout_alignTop="@+id/sbPregunta2"
                    android:layout_toRightOf="@+id/sbPregunta2"
                    android:layout_toEndOf="@+id/sbPregunta2" />


                <TextView
                    android:id="@+id/tvPregunta3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/tvPregunta2"
                    android:layout_alignLeft="@+id/sbPregunta2"
                    android:layout_alignRight="@+id/tvPregunta2"
                    android:layout_alignStart="@+id/sbPregunta2"
                    android:layout_below="@+id/sbPregunta2"
                    android:layout_marginTop="19dp"
                    android:gravity="fill"
                    android:text="3- ¿Qué tan útil te resulta este pensamiento?"
                    android:textColor="#424242"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblRacional3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPregunta3"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="3dp"
                    android:gravity="fill"
                    android:text="NADA ÚTIL  ----->  MUY ÚTIL"
                    android:textColor="#424242"
                    android:textSize="18sp" />

                <SeekBar
                    android:id="@+id/sbPregunta3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/sbPregunta2"
                    android:layout_alignLeft="@+id/tvPregunta3"
                    android:layout_alignRight="@+id/sbPregunta2"
                    android:layout_alignStart="@+id/tvPregunta3"
                    android:layout_below="@+id/lblRacional3"
                    android:layout_marginTop="14dp"
                    android:max="5"
                    android:theme="@style/Widget.AppCompat.SeekBar.Discrete" />

                <TextView
                    android:id="@+id/tvDeSeekBarPregunta3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/tvDeSeekBarPregunta1"
                    android:layout_alignRight="@+id/tvDeSeekBarPregunta1"
                    android:layout_alignTop="@+id/sbPregunta3"
                    android:layout_below="@+id/sbPregunta3"
                    android:text="0"
                    android:textColor="#424242"
                    android:textSize="18sp"
                    android:layout_alignLeft="@+id/tvDeSeekBarPregunta2"
                    android:layout_alignStart="@+id/tvDeSeekBarPregunta2" />

                <Button
                    android:id="@+id/btnPrev11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#0489B1"
                    android:onClick="gotoBackFrm"
                    android:tag="frm212_3"
                    android:text="Anterior"
                    android:textColor="#FFFFFF"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/btnNext10"
                    android:layout_toStartOf="@+id/btnNext10" />

                <Button
                    android:id="@+id/btnNext10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#0489B1"
                    android:onClick="gotoFrm"
                    android:tag="frm212_5"
                    android:text="Siguiente"
                    android:textColor="#FFFFFF"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>
